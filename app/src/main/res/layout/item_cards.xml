<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp"
        android:background="@drawable/radius_stroke"
        android:backgroundTint="@color/light_blue">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCard"
            style="@style/InterTextView_400_Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text"
            android:text="XXXX XXXX XXXX 1234"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemove"
            style="@style/TextView_600_SemiBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Remove card"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvCard"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>