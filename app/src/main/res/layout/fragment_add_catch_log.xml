<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.fikenastet.ui.dashboard.profile.catch_log.CatchLogVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.dashboard.profile.catch_log.AddCatchLogFragment">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:onClick="@{v -> vm.onClick(v)}"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <!-- Notification -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/notification"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />

        <!-- Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Catch Log"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="@id/ivNotification"
            app:layout_constraintEnd_toStartOf="@id/ivNotification"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivNotification" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/select_species"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSpecies"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/radius_stroke"
            android:text="Pike"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectTitle" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDropArrow"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/iv_drop"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/tvSpecies"
            app:layout_constraintEnd_toEndOf="@+id/tvSpecies"
            app:layout_constraintTop_toTopOf="@+id/tvSpecies" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeightLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/weight_kg"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpecies"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etWeight"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:paddingEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etBait"
            android:background="@drawable/radius_stroke"
            android:hint="Enter here"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvWeightLabel" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/iv_weight"
            app:layout_constraintBottom_toBottomOf="@+id/etWeight"
            app:layout_constraintEnd_toEndOf="@+id/etWeight"
            app:layout_constraintTop_toTopOf="@+id/etWeight" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBaitLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/bait_used"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etWeight"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etBait"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:paddingEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etLocation"
            android:background="@drawable/radius_stroke"
            android:hint="Enter here"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvBaitLabel" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/fish_rev"
            app:layout_constraintBottom_toBottomOf="@+id/etBait"
            app:layout_constraintEnd_toEndOf="@+id/etBait"
            app:layout_constraintTop_toTopOf="@+id/etBait" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLocationLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Location"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etBait"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etLocation"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:paddingEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etTimeTook"
            android:background="@drawable/radius_stroke"
            android:hint="Enter location"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvLocationLabel" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/location"
            app:layout_constraintBottom_toBottomOf="@+id/etLocation"
            app:layout_constraintEnd_toEndOf="@+id/etLocation"
            app:layout_constraintTop_toTopOf="@+id/etLocation" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Date"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTimeLabel"
            app:layout_constraintTop_toBottomOf="@id/etLocation"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/TextView_400_Regular"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/radius_stroke"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:hint="DD/MM/YYYY"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTime"
            app:layout_constraintTop_toBottomOf="@+id/tvDateLabel" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            style="@style/TextView_400_Regular"
            android:layout_width="0dp"
            android:layout_height="@dimen/_43sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/radius_stroke"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:hint="HH/MM"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDateLabel" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Time"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toEndOf="@id/tvDateLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etLocation"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeTook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Time took to catch the fish"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etTimeTook"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etDesc"
            android:background="@drawable/radius_stroke"
            android:hint="eg: 2hours"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeTook" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeatherLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Select Weather"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etTimeTook"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeather"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/radius_stroke"
            android:text="Sunny"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvWeatherLabel" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDropArrow2"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/iv_drop"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/tvWeather"
            app:layout_constraintEnd_toEndOf="@+id/tvWeather"
            app:layout_constraintTop_toTopOf="@+id/tvWeather" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUploadLabel"
            style="@style/TextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Upload Lake photo (least 1 photos)"
            android:textColor="@color/app_text_hint"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@id/tvAddMore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWeather" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddMore"
            style="@style/TextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+ Add more"
            android:onClick="@{v->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvUploadLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvUploadLabel"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consUploadPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:background="@drawable/radius_stroke"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadLabel">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivUpload"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/iv_upload"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView_400_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Upload Photos"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="@+id/ivUpload"
                app:layout_constraintStart_toStartOf="@+id/ivUpload"
                app:layout_constraintTop_toBottomOf="@+id/ivUpload" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description of how you got the fish"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/consUploadPic"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etDesc"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/radius_stroke"
            android:hint="Enter here"
            android:gravity="start"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/tvDescLabel"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrivacyLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description of how you got the fish"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etDesc"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrivacy"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/radius_stroke"
            android:text="Public"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvPrivacyLabel" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDropArrow3"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/iv_drop"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrivacy"
            app:layout_constraintEnd_toEndOf="@+id/tvPrivacy"
            app:layout_constraintTop_toTopOf="@+id/tvPrivacy" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/radius_border"
            android:onClick="@{v ->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/tvPrivacy">

            <TextView
                android:id="@+id/textGetStarted"
                style="@style/InterTextView_500_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Catch"
                android:onClick="@{v ->vm.onClick(v)}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconFish"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/famicons_fish"
                app:layout_constraintBottom_toBottomOf="@id/textGetStarted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textGetStarted" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>