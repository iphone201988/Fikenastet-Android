<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bean"
            type="com.example.fikenastet.data.model.DummyAllLake" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="callback"
            type="com.example.fikenastet.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_6sdp"
        android:background="@drawable/radius_border"
        android:backgroundTint="@color/bg_home_card">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:padding="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/reel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize15Percent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_margin="@dimen/_12sdp"
            android:src="@drawable/selected_star"
            app:layout_constraintStart_toStartOf="@+id/iv1"
            app:layout_constraintTop_toTopOf="@+id/iv1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_margin="@dimen/_12sdp"
            android:src="@drawable/iv_three_dot"
            app:layout_constraintEnd_toEndOf="@+id/iv1"
            app:layout_constraintTop_toTopOf="@+id/iv1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDes"
            style="@style/TextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@{bean.name}"
            android:gravity="start"
            android:maxLines="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:layout_constraintEnd_toStartOf="@+id/tvPrice"
            app:layout_constraintStart_toStartOf="@+id/iv1"
            app:layout_constraintTop_toBottomOf="@+id/iv1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            style="@style/TextView_600_SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="$165"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="@+id/iv1"
            app:layout_constraintTop_toBottomOf="@+id/iv1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBuyNow"
            style="@style/InterTextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Buy now"
            android:textColor="@color/white"
            android:singleLine="true"
            android:paddingHorizontal="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:background="@drawable/radius_border"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv1"
            app:layout_constraintTop_toBottomOf="@+id/tvDes" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvViewDetails"
            style="@style/InterTextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:text="View details"
            android:textColor="@color/white"
            android:singleLine="true"
            android:onClick="@{v ->callback.onItemClick(v, bean,pos)}"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:background="@drawable/radius_border"
            android:textSize="@dimen/_8ssp"
            android:backgroundTint="@color/app_text"
            app:layout_constraintBottom_toBottomOf="@+id/tvBuyNow"
            app:layout_constraintEnd_toStartOf="@+id/tvBuyNow"
            app:layout_constraintTop_toTopOf="@+id/tvBuyNow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
