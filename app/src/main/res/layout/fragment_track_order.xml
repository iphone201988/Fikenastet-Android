                    app:layout_constraintStart_toEndOf="@+id/ivTickInTransit"
                    app:layout_constraintTop_toTopOf="@+id/ivTickInTransit" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDelivered"
                    android:layout_width="@dimen/_20sdp"
