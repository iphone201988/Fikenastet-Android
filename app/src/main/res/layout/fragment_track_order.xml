                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Delivery"
                        android:textColor="@color/app_text_hint"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEstimatedDeliveryValue"
                        style="@style/TextView_600_SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="May 31 – Jun 2 "
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvEstimatedDelivery" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/tvView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/consEstimatedDelivery" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDeliveryProgress"
                    style="@style/TextView_600_SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Delivery Progress"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintStart_toStartOf="@+id/tvView2"
                    app:layout_constraintTop_toBottomOf="@+id/tvView2" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVan"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/iv_van"
                    app:layout_constraintStart_toStartOf="@+id/tvDeliveryProgress"
