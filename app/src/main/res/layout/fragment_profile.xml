<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.fisken_astet.fikenastet.ui.dashboard.profile.ProfileFragmentVM" />
        <variable
            name="bean"
            type="com.fisken_astet.fikenastet.data.model.GetProfileModelData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.dashboard.profile.ProfileFragment">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:src="@drawable/fish_rev"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <!-- Settings -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSettings"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:src="@drawable/iv_settings"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />

        <!-- Notifications -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/notification"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toStartOf="@id/ivSettings"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />

        <!-- Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_profile"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/ivNotification"
            app:layout_constraintEnd_toStartOf="@id/ivNotification"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivNotification" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_border_chat"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:backgroundTint="@color/colorPrimary_50"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="@id/ivSettings">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivStar"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStarRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:layout_marginStart="@dimen/_2sdp"
                setAverageRating="@{bean.average_rating}"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@id/ivStar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivStar"
                app:layout_constraintBottom_toBottomOf="@id/ivStar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage2"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            setImageFromUrl="@{bean.profile_picture}"
            android:src="@drawable/iv_user_icon"
            android:scaleType="centerCrop"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="2dp"
            android:layout_marginTop="@dimen/_3sdp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize12Percent"
            app:layout_constraintTop_toBottomOf="@id/clStar"
            app:layout_constraintStart_toStartOf="@id/ivBack"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/famicons_fish"
            app:tint="@color/blue"
            android:elevation="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_minus8sdp"
            android:layout_marginEnd="@dimen/_minus8sdp"
            app:layout_constraintTop_toTopOf="@id/ivImage2"
            app:layout_constraintEnd_toEndOf="@id/ivImage2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView_400_Regular"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/app_text_hint"
            android:text="@{bean.short_bio}"
            app:layout_constraintTop_toBottomOf="@id/consProfileData"
            android:layout_marginHorizontal="@dimen/_18sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:text="@{bean.username}"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/ivImage2"
            app:layout_constraintEnd_toEndOf="@id/ivSettings"
            app:layout_constraintStart_toEndOf="@id/ivImage2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consProfileData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="@id/tvName">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPostlabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_400_Regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/app_text_hint"
                android:text="@string/posts"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvFollowersLabel"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowersLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_400_Regular"
                android:textSize="@dimen/_11ssp"
                android:onClick="@{v->vm.onClick(v)}"
                android:textColor="@color/app_text_hint"
                android:text="@string/followers"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPostlabel"
                app:layout_constraintEnd_toStartOf="@id/tvFollowingLabel"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowingLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_400_Regular"
                android:textSize="@dimen/_11ssp"
                android:onClick="@{v->vm.onClick(v)}"
                android:textColor="@color/app_text_hint"
                android:text="@string/following"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvFollowersLabel"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:text="@{bean.posts_count.toString()}"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPostlabel"
                app:layout_constraintStart_toStartOf="@id/tvPostlabel"
                app:layout_constraintEnd_toStartOf="@id/tvFollowers"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:text="@{bean.followers_count.toString()}"
                android:textSize="@dimen/_13ssp"
                android:onClick="@{v->vm.onClick(v)}"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPostlabel"
                app:layout_constraintStart_toEndOf="@id/tvPosts"
                app:layout_constraintEnd_toStartOf="@id/tvFollowing"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:text="@{bean.following_count.toString()}"
                android:textSize="@dimen/_13ssp"
                android:onClick="@{v->vm.onClick(v)}"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPostlabel"
                app:layout_constraintStart_toEndOf="@id/tvFollowers"
                app:layout_constraintEnd_toEndOf="@id/tvFollowingLabel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            app:layout_constraintTop_toBottomOf="@id/tvDesc"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClip"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/iv_clip"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:text=""
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_3sdp"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toEndOf="@id/ivClip"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/ivClip"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            app:layout_constraintTop_toBottomOf="@id/tvLink"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPost"
            style="@style/InterTextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/radius_stroke_high"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Post"
            android:onClick="@{v ->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/tvEdit"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view2" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEdit"
            style="@style/InterTextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/radius_stroke_high"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Edit"
            android:onClick="@{v->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPost"
            app:layout_constraintEnd_toStartOf="@+id/tvShare"
            app:layout_constraintStart_toEndOf="@+id/tvPost"
            app:layout_constraintTop_toTopOf="@+id/tvPost" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShare"
            style="@style/InterTextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/radius_stroke_high"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Share"
            android:onClick="@{v->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPost"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/tvEdit"
            app:layout_constraintTop_toTopOf="@+id/tvPost" />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorFullWidth="false"
            android:textSize="@dimen/_12ssp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:tabTextColor="@color/white"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabRippleColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/tvPost" />
        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/tabLayout"
            app:layout_constraintEnd_toEndOf="@id/tabLayout"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tabLayout"
            app:layout_constraintEnd_toEndOf="@id/tabLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>