<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.fisken_astet.fikenastet.ui.settings.SettingsVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.dashboard.profile.EditProfileFragment">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:onClick="@{v -> vm.onClick(v)}"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <!-- Notification -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/notification"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />
        <!-- Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/ivNotification"
            app:layout_constraintEnd_toStartOf="@id/ivNotification"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivNotification" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintBottom_toTopOf="@id/consButton">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/_25sdp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize16Percent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage2"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/iv_user_icon"
            android:scaleType="centerCrop"
            android:padding="@dimen/_1sdp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize16Percent"
            app:layout_constraintTop_toTopOf="@id/ivImage"
            app:layout_constraintStart_toStartOf="@id/ivImage"
            app:layout_constraintEnd_toEndOf="@id/ivImage"
            app:layout_constraintBottom_toBottomOf="@id/ivImage"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvImageTitle"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile pic"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_13ssp"
            android:onClick="@{v->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/ivImage"
            app:layout_constraintStart_toStartOf="@id/ivImage"
            app:layout_constraintTop_toBottomOf="@id/ivImage" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etUsername"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:hint="Enter Email"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/radius_stroke"
            android:enabled="false"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etName"
            android:textColor="@color/colorPrimary"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/tvImageTitle" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/email"
            app:layout_constraintBottom_toBottomOf="@+id/etUsername"
            app:layout_constraintEnd_toEndOf="@+id/etUsername"
            app:layout_constraintTop_toTopOf="@+id/etUsername" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etName"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingEnd="@dimen/_35sdp"
            android:hint="Enter username"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/radius_stroke"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etLocation"
            android:textColor="@color/colorPrimary"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/etUsername" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="@+id/etName"
            app:layout_constraintEnd_toEndOf="@+id/etName"
            app:layout_constraintTop_toTopOf="@+id/etName" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etLocation"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Enter Location"
            android:background="@drawable/radius_stroke"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/etDesc"
            android:textColor="@color/colorPrimary"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/etName" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLocation"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/location"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/etLocation"
            app:layout_constraintEnd_toEndOf="@+id/etLocation"
            app:layout_constraintTop_toTopOf="@+id/etLocation" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etDesc"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="start"
            android:hint="Write a short bio..."
            android:background="@drawable/radius_stroke"
            android:imeOptions="actionDone"
            android:textColor="@color/app_text_hint"
            android:overScrollMode="always"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/app_text_hint"
            app:layout_constraintTop_toBottomOf="@+id/etLocation" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAddLinks"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:minHeight="@dimen/_43sdp"
            android:singleLine="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Add Links"
            android:background="@drawable/radius_stroke"
            android:imeOptions="actionDone"
            android:textColor="@color/colorPrimary"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColorHint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/etDesc" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/iv_clip"
            app:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/etAddLinks"
            app:layout_constraintEnd_toEndOf="@+id/etAddLinks"
            app:layout_constraintTop_toTopOf="@+id/etAddLinks" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/radius_border"
            android:onClick="@{v ->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textGetStarted"
                style="@style/InterTextView_500_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconFish"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/famicons_fish"
                app:layout_constraintBottom_toBottomOf="@id/textGetStarted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textGetStarted" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>