<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.fikenastet.ui.otherUserProfile.OtherUserProfileVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.otherUserProfile.OtherUserFragment">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/ic_back"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <!-- Settings -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDots"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/iv_three_vertical_dots"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />

        <!-- Notifications -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/notification"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toStartOf="@id/ivDots"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />

        <!-- Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="@id/ivNotification"
            app:layout_constraintEnd_toStartOf="@id/ivNotification"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivNotification" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/_20sdp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize12Percent"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="@id/ivBack"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage2"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/iv_dummy"
            android:scaleType="centerCrop"
            android:padding="@dimen/_1sdp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize12Percent"
            app:layout_constraintTop_toTopOf="@id/ivImage"
            app:layout_constraintStart_toStartOf="@id/ivImage"
            app:layout_constraintEnd_toEndOf="@id/ivImage"
            app:layout_constraintBottom_toBottomOf="@id/ivImage"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView_400_Regular"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/app_text_hint"
            android:text="Fishing since I could walk. Pike &amp; Zander fan."
            app:layout_constraintTop_toBottomOf="@id/consProfileData"
            android:layout_marginHorizontal="@dimen/_15sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:text="johnDoe_007"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/ivImage"
            app:layout_constraintEnd_toEndOf="@id/ivDots"
            app:layout_constraintStart_toEndOf="@id/ivImage"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consProfileData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="@id/tvName">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPostlabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_400_Regular"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_text_hint"
                android:text="@string/posts"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvFollowersLabel"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowersLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_400_Regular"

                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_text_hint"
                android:text="@string/followers"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPostlabel"
                app:layout_constraintEnd_toStartOf="@id/tvFollowingLabel"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowingLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_400_Regular"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_text_hint"

                android:text="@string/following"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvFollowersLabel"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:text="2"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPostlabel"
                app:layout_constraintStart_toStartOf="@id/tvPostlabel"
                app:layout_constraintEnd_toStartOf="@id/tvFollowers"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:text="128"
                android:onClick="@{v->vm.onClick(v)}"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPostlabel"
                app:layout_constraintStart_toEndOf="@id/tvPosts"
                app:layout_constraintEnd_toStartOf="@id/tvFollowing"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFollowing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView_500_Medium"
                android:text="65"
                android:onClick="@{v->vm.onClick(v)}"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPostlabel"
                app:layout_constraintStart_toEndOf="@id/tvFollowers"
                app:layout_constraintEnd_toEndOf="@id/tvFollowingLabel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/tvDesc"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClip"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/iv_clip"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_500_Medium"
            android:text="YouTube/blog"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@id/ivClip"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/ivClip"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/tvLink"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFollow"
            style="@style/InterTextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/radius_stroke_high"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Follow"
            android:onClick="@{v ->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toStartOf="@+id/tvMessage"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view2" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessage"
            style="@style/InterTextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/radius_stroke_high"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Message"
            android:onClick="@{v->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvFollow"
            app:layout_constraintEnd_toStartOf="@+id/tvReviews"
            app:layout_constraintStart_toEndOf="@+id/tvFollow"
            app:layout_constraintTop_toTopOf="@+id/tvFollow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReviews"
            style="@style/InterTextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/radius_stroke_high"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Reviews"
            android:onClick="@{v->vm.onClick(v)}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvFollow"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/tvMessage"
            app:layout_constraintTop_toTopOf="@+id/tvFollow" />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorFullWidth="false"
            android:textSize="@dimen/_12ssp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:tabTextColor="@color/white"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabRippleColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/tvFollow" />
        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/tabLayout"
            app:layout_constraintEnd_toEndOf="@id/tabLayout"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tabLayout"
            app:layout_constraintEnd_toEndOf="@id/tabLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>